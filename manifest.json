{
  "name": "Clear Site Data",
  "description": "Clear cookies, local storage, and other data from the current site.",
  "version": "1.3",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "permissions": [
    "storage",
    "cookies",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clear-site-data@shasika",
      "strict_min_version": "109.0"
    }
  }
}